{
  "name": "marc-frbr.js",
  "version": "0.1.0",
  "description": "FRBR style clustering for MARC cataloging records.",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build_workers && npm run build_main",
    "build_main": "esbuild src/cluster/main.ts --bundle --platform=node --format=esm --outfile=dist/main.js",
    "build_workers": "npm run build_partition_sorting && npm run build_candidate_processing",
    "build_candidate_processing": "esbuild src/cluster/process_work_candidates.ts --bundle --platform=node --format=esm --outfile=dist/process_work_candidates.js",
    "build_partition_sorting": "esbuild src/sorting/sort_partition.ts --bundle --platform=node --format=esm --outfile=dist/sort_partition.js",
    "test": "node --import tsx --test tests/**/*.test.ts"
  },
  "keywords": [
    "library",
    "cataloging",
    "marc",
    "bibliographic description",
    "cluster",
    "frbr"
  ],
  "author": "Steve Meyer",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^24.2.1",
    "esbuild": "^0.25.8",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  }
}
